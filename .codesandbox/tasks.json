{
  "$schema": "https://codesandbox.io/schemas/tasks.json",
  "setupTasks": ["pnpm install"],
  "tasks": {
    "dev-backend": {
      "name": "Dev: Backend",
      "command": "pnpm dev:backend",
      "runAtStart": true,
      "preview": { "port": 3001, "prLink": "direct" }
